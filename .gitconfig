[user]
	name = flespark
	email = 0860734llx@gmail.com
[credential]
	helper = store
[color]
	ui = auto
[log]
	decorate = auto
[merge]
	ff = only
	tool = vimdiff
	conflictstyle = diff3
	defaultToUpstream = true
[mergetool]
	prompt = false
[push]
	default = simple
[alias]
	rt = rev-parse --show-toplevel
	ad = add -u
	co = checkout
	br = branch
	ci = commit
	ca = commit --amend
	sh = show
	sl = show HEAD
	df = diff
	dc = diff --cached
	st = status
	us = reset HEAD --
	rh = reset --hard
	fp = format-patch
	mg = merge
	rv = revert
	lo = log --decorate
	lg = git log --graph --oneline --decorate --all
	gr = log --decorate --graph --oneline --all
	cp = cherry-pick
	af = am --reject --whitespace=fix
	mt = mergetool
[init]
	templatedir = ~/.git-templates
[core]
	editor = vim
	excludesfile = ~/.gitignore
# [url "https://hub.fastgit.org/"]
[url "https://github.com.cnpmjs.org/"]
	insteadOf = https://github.com/
[protocol "http"]
	allow = always
